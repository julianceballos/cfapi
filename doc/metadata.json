{
  "project": "Next API",
  "baseUrl": "http://localhost:8500/nextapi/index.cfm/",
  "description": "gateway between next_ws and nexth5",
  "resources": [
    {
      "resource": "users",
      "description": "user resource description",
      "tags": [
        "Usuarios",
        "Nexth5"
      ],
      "module": "Finanzas",
      "operations": [
        {
          "path": "/{id}",
          "method": "GET",
          "description": "get a user",
          "tags": [
            "nx_usuarios.datos_grales_usu",
            "users"
          ]
        },
        {
          "path": "/",
          "method": "GET",
          "description": "get a list of users",
          "tags": [
            "nx_usuarios.bsqUsuario",
            "users"
          ]
        },
        {
          "path": "/",
          "method": "POST",
          "description": "create a user",
          "tags": [
            "nx_usuarios.agregarUsu",
            "users"
          ],
          "args": [
            {
              "name": "from",
              "type": "string",
              "value": "[usuarios|articulos]",
              "description": ""
            },
            {
              "name": "actives",
              "type": "boolean",
              "value": "",
              "description": ""
            }
          ]
        },
        {
          "path": "/{id}",
          "method": "PUT",
          "description": "update a user",
          "tags": [
            "nx_usuarios.actualizar_usu",
            "users"
          ],
          "args": [
            {
              "name": "from",
              "type": "string",
              "value": "[usuarios|articulos]",
              "description": "descripcion con varias lineas"
            },
            {
              "name": "actives",
              "type": "boolean",
              "value": "[true|false]",
              "description": "solo activos"
            }
          ]
        }
      ]
    }
  ]
}